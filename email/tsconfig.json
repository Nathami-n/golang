{
  "compilerOptions": {
    "target": "ESNext",
    "module": "EsNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": false,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts", "src/__tests__/health.spec.mts"],
  "exclude": ["node_modules", "dist"]
}
