{
    "compilerOptions": {
        "target": "es6",
        "module": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "allowJs": true,
        "noImplicitAny": true,
        "noEmitOnError": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}